generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  schoolId String?
  school   School? @relation(fields: [schoolId], references: [id])

  accounts        Account[]
  sessions        Session[]
  simulations     SimulationEmail[]
  trainingHistory UserTraining[]
  metrics         UserMetrics?
}

enum Role {
  USER
  MANAGER
  ADMIN
}

model School {
  id         String   @id @default(cuid())
  name       String
  inviteCode String   @unique
  createdBy  String
  createdAt  DateTime @default(now())

  users     User[]
  campaigns Campaign[]
}

model SimulationEmail {
  id         String    @id @default(cuid())
  userId     String
  campaignId String
  templateId String
  sentAt     DateTime  @default(now())
  opened     Boolean   @default(false)
  clicked    Boolean   @default(false)
  reportedAt DateTime?
  completedAt DateTime?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign Campaign @relation(fields: [campaignId], references: [id])
  template Template @relation(fields: [templateId], references: [id])
}

model Template {
  id         String @id @default(cuid())
  moduleId   String
  name       String
  subject    String
  body       String @db.Text
  difficulty Int    @default(1)
  isActive   Boolean @default(true)
  createdAt  DateTime @default(now())

  module      TrainingModule   @relation(fields: [moduleId], references: [id])
  simulations SimulationEmail[]
}

model TrainingModule {
  id          String  @id @default(cuid())
  name        String
  description String  @db.Text
  content     String  @db.Text
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  templates    Template[]
  userProgress UserTraining[]
}

model UserTraining {
  id          String    @id @default(cuid())
  userId      String
  moduleId    String
  assignedAt  DateTime  @default(now())
  completedAt DateTime?
  score       Int?

  user   User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  module TrainingModule @relation(fields: [moduleId], references: [id])

  @@unique([userId, moduleId])
}

model Campaign {
  id           String  @id @default(cuid())
  schoolId     String?
  name         String
  scheduleType String  @default("random")
  status       String  @default("active")
  createdAt    DateTime @default(now())

  school      School?          @relation(fields: [schoolId], references: [id])
  simulations SimulationEmail[]
}

model UserMetrics {
  id             String    @id @default(cuid())
  userId         String    @unique
  totalSent      Int       @default(0)
  totalClicked   Int       @default(0)
  totalReported  Int       @default(0)
  totalCompleted Int       @default(0)
  lastActivity   DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
